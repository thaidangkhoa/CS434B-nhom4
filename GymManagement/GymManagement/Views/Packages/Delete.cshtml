@model GymManagement.Models.Package

@{
    ViewBag.Title = "Xóa Gói Tập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4 text-danger">Xác nhận Xóa Gói Tập</h2>

    <dl class="row">
        <dt class="col-sm-3">Tên Gói</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Giá</dt>
        <dd class="col-sm-9">@Model.Price VNĐ</dd>

        <dt class="col-sm-3">Thời hạn</dt>
        <dd class="col-sm-9">@Model.Duration tháng</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Xác nhận Xóa</button>
        @Html.ActionLink("Hủy", "Index", "Packages", null, new { @class = "btn btn-secondary ml-2" })
    }
</div>
